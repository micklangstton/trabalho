#include <stdio.h>
#include <stdlib.h>
typedef struct acoes{
    int codigo_de_idenficacao_da_acao, contador_de_uso_da_acao;
    char nome_da_acao[40], data_da_acao[12], hora_da_acao[10], tipo_da_acao[40];
}acoes;
typedef struct data{
    int data,hora;
}data;

typedef struct dados_user{
    char nome_do_usuario[14],email[20], senha[16],cidade[40],estado[20], profissao[20];
    char genero[1], acoes_realizadas_pelo_usuario[140], assuntos_de_interesse[40];
    int idade, tipo_de_relacionamento,CPF;
    struct acoes dados_das_acoes_possiveis[3];
    struct data usuario[3];
}dados_user;


typedef struct interesse{
    int codigo_de_idenficacao;
    char tipo_de_pagina_ou_grupo[40], titulo[40], tema[30], dados_das_acoes_possiveis_por_usuarios_nao_administradores[50];
    struct acoes dados_das_acoes_possiveis[3];
}interesse;

typedef struct marketing{
    int codigo_da_empresa, valor_para_incluir_banners_de_marketing;
    char nome_do_produto_servico[40], localizacao_da_propaganda_da_pagina[40], opcao_de_armazenamento_de_cookies_dos_usuarios[40];
    char periodo_de_tempo_do_banner_da_pagina[40];
}marketing;
int main(void){
    int esc,i;
    struct acoes action[3];
    struct dados_user usuario[3];
    struct interesse dados_int[3];
    struct marketing propaganda[3];
    printf("Bem vindo ao GeekBook!!!!");
            printf("Menu");
    printf("Digite (1) para cadastrar acoes.\n");
    fflush(stdin);
    printf("Digite (2) para cadastrar os dados do usuario.\n");
    fflush(stdin);
    printf("Digite (3) para cadastrar os assuntos de interesse.\n");
    fflush(stdin);
    printf("Digite (4) para cadastrar banners de marketing.\n");
    fflush(stdin);
    scanf("%d\n", &esc);
    switch(esc){
    case 1:{
        for(i=0; i<3;i++){
            printf("\nDigite codigo de idenficação da ação:\n ");
            fflush(stdin);
            scanf("%d", &action[i].codigo_de_idenficacao_da_acao);
            printf("Digite o contador de uso da ação\n");
            fflush(stdin);
            scanf("%d", &action[i].contador_de_uso_da_acao);
            puts("Digite o nome da acao\n");
            gets(action[i].nome_da_acao);
            printf("Digite a data da ação\n");
            gets(action[i].data_da_acao);
            printf("Digite a hora da ação\n");
            gets(action[i].hora_da_acao);
            printf("\nDigite o tipo da ação\n");
            gets(action[i].tipo_da_acao);
        }
    }
        break;
    case 2:{
        for(i=0; i<3;i++){
            puts("\nDigite o nome do usuário.\n");
            gets(usuario[i].nome_do_usuario);
            printf("Digite o CPF.\n");
            fflush(stdin);
            scanf("%d\n",&usuario[i].CPF);
            puts("Digite seu E-mail.\n");
            gets(usuario[i].email);
            puts("Digite sua senha.\n");
            gets(usuario[i].senha);
            puts("Informe o seu genero.\n");
            gets(usuario[i].genero);
            puts("Digite a sua cidade.\n");
            gets(usuario[i].cidade);
            puts("Digite seu estado.\n");
            gets(usuario[i].estado);
            printf("Informe a sua idade.\n");
            fflush(stdin);
            scanf("%d\n",&usuario[i].idade);
            puts("Digite sua profissao.\n");
            gets(usuario[i].profissao);
            puts("Informe o seu tipo de relacionamento.\n");
            gets(usuario[i].tipo_de_relacionamento);
            puts("Digite as acoes realizadas pelo usuario.\n");
            gets(usuario[i].acoes_realizadas_pelo_usuario);
            puts("Informe os dados das acoes possiveis.\n");
            gets(usuario[i].dados_das_acoes_possiveis);
            puts("Informe os dados dos assuntos de interesse.\n");
            gets(usuario[i].assuntos_de_interesse);

        }
   }

        break;
    case 3:{
        for (i=0; i<3; i++){
            puts("Informe o tipo ( página / grupo )?.\n");
            gets(dados_int[i].tipo_de_pagina_ou_grupo);
            puts("Informe o titulo desejado");
            gets(dados_int[i].titulo);
            puts("Informe o tema (ex:esporte,entreterimento,arte,etc...)\n");
            gets(dados_int[i].tema);
            printf("Digite o código de identificação\n");
            fflush(stdin);
            scanf("%d\n",&dados_int[i].codigo_de_idenficacao);
            puts("Informe os dados de suas acoes.\n");
            gets(dados_int[i].dados_das_acoes_possiveis_por_usuarios_nao_administradores);


        }
    }
        break;
    case 4:{
        for (i=0; i<3; i++){
        printf("Digite o código da empresa\n");
        fflush(stdin);
        scanf("%d\n", &propaganda[i].codigo_da_empresa);
        puts("Informe o nome do produto/serviço.\n");
        gets(propaganda[i].nome_do_produto_servico);
        puts("Digite a localizacao da propaganda na pagina.\n");
        gets(propaganda[i].localizacao_da_propaganda_da_pagina);


        }
    }
    default:
    }

}
